<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:lines="1"
        android:background="@color/ColorPrimary"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Some Date"
        android:elevation="2dp"
        android:textColor="#FFFFFF"
        android:gravity="right"
        android:textSize="16sp"
        android:id="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:elevation="2dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/avatar"
        android:layout_marginStart="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:elevation="2dp"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:gravity="left"
        android:padding="16dp"
        android:textSize="16sp"
        android:id="@+id/title"
        android:layout_alignBottom="@+id/date"
        android:layout_toRightOf="@+id/avatar"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lorem"
        android:lines="10"
        android:padding="16dp"
        android:textSize="14sp"
        android:id="@+id/content"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_start_off"
        fab:fab_colorNormal="@color/AccentColor"
        fab:fab_colorPressed="@color/AccentColor"
        fab:fab_colorRipple="@color/AccentColorRipple"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:gravity="center|right"
        android:textColor="#99FFFFFF"
        android:elevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100k likes"
        android:textSize="16sp"
        android:textStyle="italic"
        android:padding="16dp"
        android:id="@+id/textView"
        android:layout_above="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/title" />
</RelativeLayout>